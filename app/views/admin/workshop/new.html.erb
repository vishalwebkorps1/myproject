<div class="col-lg-12 mt-3">
  <div class="card mt-5 mb-4">
    <div class="card-header">
      <h4 class="text-center">Create Workshop</h4>
    </div>
    <div class="card-body">
      <%= form_with model: [:admin, @workshop] do |form| %>
        <div class="row mt-3 mb-3">
          <div class="col-lg-4">
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="form-group">
              <%= form.label :start_date %>
              <%= form.date_field :start_date, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>
        </div>
          <div class="row mt-3 mb-3">
            <div class="col-lg-4">
              <div class="form-group">
                <%= form.label :end_date %>
                <%= form.date_field :end_date, class: 'form-control mt-2 mb-2' %>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <%= form.label :start_time %>
                <%= form.time_field :start_time, class: 'form-control mt-2 mb-2' %>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <%= form.label :end_time %>
                <%= form.time_field :end_time, class: 'form-control mt-2 mb-2' %>
              </div>
            </div>
          </div>
          <div class="row mt-3 mb-3">
            <div class="col-lg-4">
              <div class="form-group">
                <%= form.label :total_sits %>
                <%= form.number_field :total_sits, class: 'form-control mt-2 mb-2' %>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <%= form.label :remaining_sits %>
                <%= form.number_field :remaining_sits, class: 'form-control mt-2 mb-2' %>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <%= form.label :registration_fee %>
                <%= form.number_field :registration_fee, class: 'form-control mt-2 mb-2' %>
              </div>
            </div>
          </div>
          <div class="row mt-4 mb-3">
            <div class="col-lg-4">
              <div class="form-group">
                <%= form.submit class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%=  link_to 'Back', admin_workshops_path, class: 'btn btn-dark'%>