<div class="col-lg-6 mt-5">
  <div class="card shadow">
    <div class="card-body">
      <%= render 'booking_details', workshop: @workshop, booking: @booking %>
    </div>
  </div>
</div>

<div class="col-lg-6 mt-5">
  <div class="card shadow">
    <div class="card-body">
      <h4 class="card-title">Refunds Status for this booking</h4>
      <ul class="list-group">
        <% if @accepted_refunds.present? %>
          <% @accepted_refunds.each do |refund| %>
            <li class="list-group-item">
              <p class="lead"><%= refund.no_of_tickets %> tickets ($ <%= refund.amount_to_be_refunded %>) to be refunded</p>
              <p class="lead"><span class="badge bg-primary">Refund Request Accepted</span></p>
            </li>
          <% end %>
        <% end %>
        <% if @successful_refunds.present? %>
          <% @successful_refunds.each do |refund| %>
            <li class="list-group-item">
              <p class="lead"><%= refund.no_of_tickets %> tickets ($ <%= refund.amount_to_be_refunded %>) refunded</p>
              <p class="lead"><span class="badge bg-success">Refund Processed Successfully</span></p>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>